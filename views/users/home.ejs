<!-- carousel -->
<section style="background-color: #eaddbf">
  <div
    id="carouselExampleControls"
    class="carousel slide overflow-hidden"
    data-bs-ride="carousel"
  >
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="users/images/Carousel1.png"
          class="d-block w-100"
          alt="First slide"
        />
      </div>
      <div class="carousel-item">
        <img
          src="users/images/Carousel-1.png"
          class="d-block w-100"
          alt="Second slide"
        />
      </div>
      <div class="carousel-item">
        <img
          src="users/images/Carousel-3.png"
          class="d-block w-100"
          alt="Third slide"
        />
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleControls"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleControls"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div class="pb-3" style="background-color: #ddc898">
    <!-- Example split danger button -->
    <div class="btn-group zindex-offcanvas mt-3">
      <button type="button" class="btn btn-outline-secondary text-dark ms-5">
        Category
      </button>
      <button
        type="button"
        class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        <span class="visually-hidden">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu opacity-75" style="background-color: #dbbf80">
        <li>
          <a class="dropdown-item" href="#">All products</a>
        </li>
        <li>
          <% locals.category.forEach((category)=>{ %>
            <a class="dropdown-item" href="#"><%=category.category  %> </a>
        </li>
            <% }) %>
          <!-- <li><a class="dropdown-item" href="#">Something else here</a></li> -->
        </li>
      </ul>
    </div>
  </div>

  <!-- products -->
  <div class="container-fluid mt-5 list-wrapper">
    <div class="row list-item">
      <% locals.products.forEach(product=>{%>
      <div class=" col-md-3 col-sm-6 p-3 d-flex justify-content-center">
        <div class="card shadow rounded" style="width: 16rem">
          <div>
            <a href="/singleProduct/<%= product._id %>">
              <img
                src="users/productImages/<%= product._id %>.jpg"
                class="card-img-top"
                alt="image"
              />
            </a>
          </div>
          <div class="card-body" style="background-color: #ede2c8">
            <h5 class="card-title"><%= product.Name %></h5>
            <p class="card-text"><%= product.Price %> â‚¹</p>
            <p class="card-text"><%= product.Description %></p>
            <!-- <a href="#" class="btn text-white" style="background-color: #1c3879"
              >Add to cart</a
            > -->
            <div class="d-flex justify-content-between">
              <a href="#" class="btn btn-outline-dark"
                ><i class="fa-solid fa-cart-shopping"></i
              ></a>
              <a href="#" class="btn btn-outline-dark">
                <i class="fa-solid fa-heart"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <!-- <div id="pagination-container"></div> -->
  </div>
</section>

