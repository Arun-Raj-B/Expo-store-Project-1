<section style="padding-top: 250px; padding-bottom: 250px">
  <div class="container h-75 d-flex justify-content-center align-items-center">
    <div class="position-relative">
      <div
        class="card p-2 shadow text-center"
        style="width: 22rem; height: 16rem"
      >
        <form action="/verifyNo" method="post">
          <h6 class="p-3">Validate your account to log in</h6>
          <div>
            <p class="text-danger m-auto"><%= locals.OTPerr %></p>

            <span>A code has been sent to</span>
            <% if(locals.last4digits) {%>
            <small>*******<%=locals.last4digits%></small>
            <% } %>
          </div>
          <div
            id="otp"
            class="inputs d-flex flex-row justify-content-center mt-2"
          >
            <input
              class="m-2 text-center form-control rounded"
              type="text"
              name="otp"
              id="first"
              maxlength="6"
            />
          </div>
          <div class="mt-3">
            <button type="submit" class="btn btn-danger px-4 validate">
              Validate
            </button>
          </div>
        </form>
      </div>
      <div class="card-2">
        <div class="content d-flex justify-content-center align-items-center">
          <span>Didn't get the code</span>
          <a href="#" class="text-decoration-none ms-3">Resend(1/3)</a>
        </div>
      </div>
    </div>
  </div>
</section>
