<section class="h-100" style="background-color: #eaddbf">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
          <div class="card card-work card-registration my-4">
            <div class="row g-0 ">
              <div class="col-xl-6 d-none d-xl-block" >
                <img
                  src="users/images/gallery-02.jpg"
                  alt="Sample photo"
                  class="img-fluid w-100"
                  style="
                    border-top-left-radius: 0.25rem;
                    border-bottom-left-radius: 0.25rem;
                    
                  "
                />
              </div>
  
              <div class="col-xl-6">
                <div class="card-body text-black" >
                  <h1 class="d-flex justify-content-center mt-2 ms-2 mb-4">SignUp</h1>
                  <form
                    action="/signup"
                    id="formValidation"
                    method="post"
                    class="mx-1 mx-md-4"
                  >
                    <div class="row">
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input
                            type="text"
                            class="form-control form-control-lg"
                            name="firstname"
                            id="firstname"
                            placeholder="First name"
                            required
                          />
                          <!-- <p class="text-danger">locals.nameMsg</p> -->
                        </div>
                      </div>
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input
                            type="text"
                            class="form-control form-control-lg"
                            name="lastname"
                            id="lastname"
                            placeholder="last name"
                            required
                          />
                        </div>
                      </div>
                    </div>
  
                    <div class="form-outline mb-4">
                      <input
                        type="text"
                        class="form-control form-control-lg"
                        name="username"
                        id="username"
                        placeholder="Username"
                        required
                      />
                      <!-- <p class="text-danger">locals.usernameMsg</p> -->
                    </div>
  
                    <div class="form-outline mb-4">
                      <input
                        type="text"
                        class="form-control form-control-lg"
                        name="email"
                        id="email"
                        placeholder="Email ID"
                        required
                      />
                    </div>
  
                    <div class="form-outline mb-4">
                      <input
                        type="password"
                        class="form-control form-control-lg"
                        name="password"
                        id="password"
                        placeholder="Password"
                        required
                      />
                      <!-- <p class="text-danger">locals.pwdMsg</p> -->
                    </div>
  
                    <div class="form-outline mb-4">
                      <input
                        type="password"
                        class="form-control form-control-lg"
                        name="confirmpassword"
                        id="confirmpassword"
                        placeholder="Confirm password"
                        required 
                      />
                      <!-- <p class="text-danger">locals.mobileMsg</p> -->
                    </div>
  
                    <div class="form-outline mb-4">
                      <input
                        type="number"
                        class="form-control form-control-lg"
                        name="mobilenumber"
                        id="mobilenumber"
                        placeholder="Mobile Number"
                        required 
                      />
                      <% if(locals.Err){ %> 
                        <p class="text-danger ps-3"><%= locals.Err  %> </p>
                        <% } %> 
                      <!-- <p class="text-danger">locals.mobileMsg</p> -->
                    </div>
                      <!-- <p class="text-danger m-auto">locals.err</p> -->
  
                    <div class="d-flex justify-content-end pt-3">
                      <button type="submit" class="btn btn-dark btn-lg ms-2">
                        Sign up
                      </button>
                  </form>  
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

  <script text="text/javascript" src="/users/javascript/signupValidation.js"></script>
  